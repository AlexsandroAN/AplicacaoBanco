<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="CADASTRO DE FUNCIONÁRIOS"
        android:textColor="@color/blue"
        android:textSize="@dimen/txt_padrao"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="Nome:"
        android:textSize="@dimen/txt_padrao"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nome"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:hint="Digite o nome do funcionário"
        android:inputType="text"
        android:textSize="@dimen/txt_padrao"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="Matrícula:"
        android:textSize="@dimen/txt_padrao"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/matricula"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:hint="Digite o matrícula do funcionário"
        android:inputType="number"
        android:textSize="@dimen/txt_padrao"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btMenuPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/voltar"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btGravar"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/salvar"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>




